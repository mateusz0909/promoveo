    <!DOCTYPE html>
    <html lang="<%= staticText.lang || 'en' %>">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title><%= appName || 'App Name' %></title>
        <meta name="description" content="<%= staticText.metaDescription || '' %>">
        <link rel="stylesheet" href="styles.css">
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&family=Open+Sans:wght@300;400;600&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    </head>
    <body>
        <!-- Navigation -->
        <nav class="navbar">
            <div class="nav-container">
                <div class="nav-logo">
                    <% if (hasCustomLogo && logoFilename) { %>
                        <img src="images/<%= logoFilename %>" alt="<%= appName || 'App Logo' %>" class="nav-logo-img">
                    <% } else { %>
                        <img src="images/applogo.png" alt="<%= appName || 'App Logo' %>" class="nav-logo-img">
                    <% } %>
                </div>
                <ul class="nav-menu">
                    <li class="nav-item">
                        <a href="#home" class="nav-link"><%= staticText.navHome || 'Home' %></a>
                    </li>
                    <li class="nav-item">
                        <a href="#features" class="nav-link"><%= staticText.navFeatures || 'Features' %></a>
                    </li>
                    <li class="nav-item">
                        <a href="#download" class="nav-link"><%= staticText.navDownload || 'Download' %></a>
                    </li>
                    <li class="nav-item">
                        <a href="#contact" class="nav-link"><%= staticText.navContact || 'Contact' %></a>
                    </li>
                </ul>
                <div class="nav-toggle" id="mobile-menu">
                    <span class="bar"></span>
                    <span class="bar"></span>
                    <span class="bar"></span>
                </div>
            </div>
        </nav>

        <!-- Hero Section -->
        <section id="home" class="hero">
            <div class="hero-container">
                <div class="hero-content">
                    <h1 class="hero-title"><%- headline || 'An Amazing App' %></h1>
                    <p class="hero-description"><%- subheadline || 'The ultimate tool for solo developers to create amazing content quickly and efficiently.' %></p>
                    <a href="#download" class="cta-button"><%- callToAction || 'Get Started' %></a>
                </div>
                <div class="hero-image">
                    <img src="<%= screenshotUrl || 'images/appmockup.png' %>" alt="<%= appName || 'App Mockup' %>" class="app-mockup">
                </div>
            </div>
        </section>

        <!-- Features Section -->
        <section id="features" class="features">
            <div class="container">
                <h2 class="section-title"><%- featuresHeader || staticText.featuresTitle || 'Key Features' %></h2>
                <div class="features-grid">
                    <% if (features && features.length > 0) { %>
                        <% features.forEach(feature => { %>
                            <div class="feature-card">
                                <div class="feature-icon"><i class="<%= feature.icon || '' %>"></i></div>
                                <h3 class="feature-title"><%= feature.title %></h3>
                                <p class="feature-description"><%= feature.description %></p>
                            </div>
                        <% }) %>
                    <% } %>
                </div>
            </div>
        </section>

        <!-- Download Section -->
        <section id="download" class="download">
            <div class="container">
                <h2 class="section-title"><%= staticText.downloadTitle || 'Download' %></h2>
                <p class="download-description"><%= staticText.downloadDescription || 'Get started today and transform your development workflow.' %></p>
                <div class="download-buttons">
                    <% if (appStoreUrl) { %>
                        <a href="<%= appStoreUrl %>" class="download-btn appstore" target="_blank" rel="noopener">
                            <img src="assets/appstore.png" alt="App Store" class="appstore-icon">
                        </a>
                    <% } else { %>
                        <span class="download-btn appstore disabled">
                            <img src="assets/appstore.png" alt="App Store" class="appstore-icon">
                        </span>
                    <% } %>
                </div>
            </div>
        </section>

        <!-- Contact Section -->
        <section id="contact" class="contact">
            <div class="container">
                <h2 class="section-title"><%= staticText.contactTitle || 'Get in Touch' %></h2>
                <p class="contact-description"><%= staticText.contactDescription || 'Have questions or feedback? We\'d love to hear from you.' %></p>
                <div class="contact-content">
                    <div class="contact-info">
                        <div class="contact-item">
                            <h4><%= staticText.contactEmailTitle || 'Email' %></h4>
                            <p><%= staticText.contactEmail || 'hello@' + (appName || 'appname').toLowerCase().replace(/\s+/g, '') + '.com' %></p>
                        </div>
                        <div class="contact-item">
                            <h4><%= staticText.contactSupportTitle || 'Support' %></h4>
                            <p><%= staticText.contactSupport || 'support@' + (appName || 'appname').toLowerCase().replace(/\s+/g, '') + '.com' %></p>
                        </div>
                    </div>
        
                </div>
            </div>
        </section>

        <!-- Footer -->
        <footer class="footer">
            <div class="container">
                <div class="footer-content">
                    <div class="footer-logo">
                        <h3><%= appName || 'App Name' %></h3>
                        <p><%= staticText.footerSlogan || 'Empowering solo developers worldwide.' %></p>
                    </div>
                    <div class="footer-links">
                        <a href="#privacy" class="footer-link"><%= staticText.footerPrivacyPolicy || 'Privacy Policy' %></a>
                        <a href="#terms" class="footer-link"><%= staticText.footerTerms || 'Terms of Service' %></a>
                    </div>
                </div>
                <div class="footer-bottom">
                    <p>&copy; <%= new Date().getFullYear() %> <%= appName || 'App Name' %>. <%= staticText.footerCopyright || 'All rights reserved.' %></p>
                </div>
            </div>
        </footer>

        <script src="script.js"></script>
    </body>
    </html>
