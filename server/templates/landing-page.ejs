<!DOCTYPE html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8">
    <title><%= appName || 'Your App' %></title>
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="css/base.css">
    <link rel="stylesheet" href="css/vendor.css">
    <link rel="stylesheet" href="css/main.css">
    <script src="js/modernizr.js"></script>
    <script src="js/pace.min.js"></script>
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon">
    <link rel="icon" href="favicon.ico" type="image/x-icon">
</head>
<body id="top">
    <div id="preloader">
        <div id="loader" class="dots-jump">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>
    <header class="s-header">
        <div class="row">
            <div class="header-logo">
                <a class="site-logo" href="index.html">
                    <h2 style="color: white; font-weight: bold;"><%= appName || "App Name" %></h2>
                </a>
            </div>
    
            <nav class="header-nav-wrap">
                <ul class="header-main-nav">
                    <li class="current"><a class="smoothscroll" href="#home" title="intro">Intro</a></li>
                    <li><a class="smoothscroll" href="#features" title="features">Features</a></li>
                </ul>
    
                <div class="header-cta">
                    <a href="#download" class="btn btn--primary header-cta__btn smoothscroll"><%= callToAction || 'Get The App' %></a>
                </div>
            </nav>
    
            <a class="header-menu-toggle" href="#"><span>Menu</span></a>
        </div>
    </header>
    <section id="home" class="s-home target-section" data-parallax="scroll" data-image-src="images/hero-bg.jpg" data-natural-width=3000 data-natural-height=2000 data-position-y=center>
        <div class="shadow-overlay"></div>
        <div class="home-content">
            <div class="row home-content__main">
                <div class="home-content__left">
                    <h1><%- headline || 'An Amazing App That Does It All.' %></h1>
                    <h3><%- subheadline || 'A great description of your app.' %></h3>
                    <div class="home-content__btn-wrap">
                        <a href="#download" class="btn btn--primary home-content__btn smoothscroll">
                            <%= callToAction || 'Get The App' %>
                        </a>
                    </div>
                </div>
                <div class="home-content__right">
                    <img src="<%= screenshotUrl || 'images/appmockup.png' %>" class="home-content__img" alt="App Mockup">
                </div>
            </div>
        </div>
    </section>
    <section id="features" class="s-features target-section">
        <div class="row section-header has-bottom-sep" data-aos="fade-up">
            <div class="col-full">
                <h1 class="display-1">
                    Features You'll Love
                </h1>
            </div>
        </div>
        <div class="row features block-1-3 block-m-1-2">
            <% if (features && features.length > 0) { %>
                <% features.forEach(feature => { %>
                    <div class="col-block item-feature" data-aos="fade-up">
                        <div class="item-feature__text">
                            <h3 class="item-title"><%= feature.title %></h3>
                            <p><%= feature.description %></p>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-block item-feature" data-aos="fade-up">
                    <div class="item-feature__text">
                        <h3 class="item-title">Feature One</h3>
                        <p>Description of this awesome feature.</p>
                    </div>
                </div>
            <% } %>
        </div>
    </section>
    <section id="download" class="s-download" style="padding-top: 0;">
        <div class="row">
            <div class="col-full text-center">
                <h2 style="margin-bottom: 2rem;">Get started with <%= appName %> today!</h2>
                <a class="btn btn--primary" href="#"><%= callToAction || 'Download Now' %></a>
            </div>
        </div>
    </section>
    <footer>
        <div class="row">
            <div class="col-full">
                <div class="copyright">
                    <span>Â© Copyright <%= new Date().getFullYear() %> <%= appName %></span> 
                </div>
            </div>
        </div>
    </footer>
    <script src="js/jquery-3.2.1.min.js"></script>
    <script src="js/plugins.js"></script>
    <script src="js/main.js"></script>
</body>
</html>
